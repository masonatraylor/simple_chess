<%= simple_form_for @game do |f| %>
  <%= f.input :name %>
  <div class='easy-col-3 w-50'>
    <div>Color:</div>
    <div>
      <input type="radio" id="white" name="join" value="white" checked>
      <label for="white">White</label>
    </div>
    <div>
      <input type="radio" id="black" name="join" value="black">
      <label for="black">Black</label>
    </div>
    <div>Variant:</div>
    <div>
      <input type="radio" id="classic" name="type" value="classic" checked>
      <label for="classic">Classic</label>
    </div>
    <div>
      <input type="radio" id="960" name="type" value="960">
      <label for="960">Chess 960</label>
    </div>
  </div>
  <%= f.submit %>
<% end %>